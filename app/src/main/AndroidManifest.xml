<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.example.android.getlost" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DestinationActivity"
            android:label="@string/title_activity_destination"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.example.android.getlost.MainActivity" />
        </activity>
        <activity
            android:name=".tripsetupActivity"
            android:label="@string/title_activity_tripsetup"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.example.android.getlost.MainActivity" />
        </activity>
        <activity
            android:name=".Destination"
            android:label="@string/title_activity_destination"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.example.android.getlost.MainActivity" />
        </activity>
        <activity
            android:name=".TripSetUp"
            android:label="@string/title_activity_trip_set_up"
            android:parentActivityName=".Destination" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.com.example.android.getlost.Destination" />
        </activity>
    </application>

</manifest>
